{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Memory Watchdog",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.agent/scripts/Watch-Memory.ps1"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "detail": "Starts the Antigravity Memory Watchdog in the background to monitor conversation logs."
        }
    ]
}